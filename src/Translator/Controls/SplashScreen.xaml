<controls:WindowExtension x:Class="Translator.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:VTEControls.WPF;assembly=VTEControls"
        xmlns:local="clr-namespace:Translator"
        mc:Ignorable="d"
        Height="400"
        Width="400"
        BorderThickness="1,1,1,1"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Topmost="False"
        ResizeMode="NoResize"
        Background="{DynamicResource Brush.Primary}"
        Foreground="{DynamicResource Brush.PrimaryFontColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Margin="10"
                BorderBrush="{DynamicResource Brush.Accent}"
                BorderThickness="5"
                Grid.RowSpan="5" />
        <TextBlock Text="{StaticResource AppDisplayName}"
                   TextAlignment="Center"
                   Grid.Row="1"
                   FontSize="30"
                   FontWeight="Bold"
                   FontFamily="Rockwell Extra Bold"
                   TextWrapping="Wrap" />
        <Grid Grid.Row="3"
              Margin="10"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock x:Name="StatusText"
                       Text="{Binding Status, FallbackValue=Loading...}"
                       FontSize="20"
                       FontFamily="Segoe UI Light"
                       HorizontalAlignment="Center"
                       TextAlignment="Center" />
            <ProgressBar x:Name="StatusBar"
                         Grid.Row="3"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         MinWidth="200"
                         Width="{Binding ActualWidth, ElementName=StatusText}"
                         IsIndeterminate="False"
                         Foreground="{DynamicResource Brush.Accent}"
                         BorderThickness="2"
                         BorderBrush="{DynamicResource Brush.PrimaryFontColor}"
                         Height="20" />
        </Grid>
    </Grid>
</controls:WindowExtension>
