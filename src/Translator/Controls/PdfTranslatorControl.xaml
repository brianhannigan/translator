<local:BaseControl x:Class="Translator.Controls.PdfTranslatorControl"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:local="clr-namespace:Translator.Controls"
                   xmlns:translator="clr-namespace:Translator"
                   xmlns:commands="clr-namespace:Translator.Commands"
                   xmlns:controls="clr-namespace:VTEControls.WPF;assembly=VTEControls"
                   xmlns:pdf="clr-namespace:PdfiumViewer;assembly=PdfiumViewer"
                   xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
                   mc:Ignorable="d"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   AllowDrop="False"
                   Background="{DynamicResource Brush.Primary}"
                   Foreground="{DynamicResource Brush.PrimaryFontColor}"
                   d:DesignHeight="781"
                   d:DesignWidth="1247">
    <UserControl.Resources>
        <Style TargetType="Button"
               BasedOn="{StaticResource AutoSizedButton}"
               x:Key="CommandButton">
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Command"
                    Value="{Binding RunCommand, RelativeSource={RelativeSource AncestorType={x:Type local:PdfTranslatorControl}}}" />
            <Setter Property="CommandParameter"
                    Value="{Binding Content, RelativeSource={RelativeSource Self}}" />
        </Style>
        <Style TargetType="RepeatButton"
               BasedOn="{StaticResource AutoSizedRepeatButton}"
               x:Key="RepeatCommandButton">
            <Setter Property="Height"
                    Value="30" />
            <Setter Property="Command"
                    Value="{Binding RunCommand, RelativeSource={RelativeSource AncestorType={x:Type local:PdfTranslatorControl}}}" />
            <Setter Property="CommandParameter"
                    Value="{Binding Content, RelativeSource={RelativeSource Self}}" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"
                                  MinWidth="200" />
                <ColumnDefinition>
                    <ColumnDefinition.Style>
                        <Style TargetType="{x:Type ColumnDefinition}">
                            <Setter Property="Width"
                                    Value="*" />
                            <!-- Default width -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=ShowPdf}"
                                             Value="false">
                                    <Setter Property="Width"
                                            Value="auto" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
                <ColumnDefinition x:Name="translationColumn">
                    <ColumnDefinition.Style>
                        <Style TargetType="{x:Type ColumnDefinition}">
                            <Setter Property="Width"
                                    Value="Auto" />
                            <!-- Default width -->
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=TranslationContainer, Converter={StaticResource InverseNullVis}}"
                                             Value="Visible">
                                    <Setter Property="Width"
                                            Value="*" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ColumnDefinition.Style>
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <!--Controls-->
            <Grid Grid.Column="0"
                  VerticalAlignment="Center">
                <StackPanel Grid.Column="0">
                    <Grid Visibility="{Binding CurrentLayout, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource EnumToVis}, ConverterParameter={x:Static translator:PdfLayoutMode.NONE}}">
                        <Button Style="{StaticResource CommandButton}"
                                Content="{x:Static commands:PdfCommands.LoadCommand}" />
                    </Grid>
                    <Grid Visibility="{Binding ShowPageNumber, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                          HorizontalAlignment="Center"
                          Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Page #:"
                                   FontSize="15"
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0" />
                        <xceed:IntegerUpDown x:Name="pageNumControl"
                                             Grid.Column="1"
                                             Width="75"
                                             FontSize="15"
                                             Text="Page #:"
                                             Minimum="1"
                                             Value="{Binding Path=PageNum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:PdfTranslatorControl}}}" />
                        <TextBlock Text="{Binding Maximum, ElementName=pageNumControl, StringFormat={} /{0}}"
                                   VerticalAlignment="Center"
                                   FontSize="15"
                                   Grid.Column="2"
                                   Margin="0,0,5,0" />
                    </Grid>

                    <Grid Visibility="{Binding ShowPdfCommands, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource BoolToVis}}"
                          Margin="0,10">
                        <StackPanel>
                            <RepeatButton Style="{StaticResource RepeatCommandButton}"
                                          Content="{x:Static commands:PdfCommands.ZoomInCommand}" />
                            <RepeatButton Style="{StaticResource RepeatCommandButton}"
                                          Content="{x:Static commands:PdfCommands.ZoomOutCommand}" />
                            <!--<Button Style="{StaticResource CommandButton}"
                                    Content="{x:Static commands:PdfCommands.ZoomResetCommand}" />-->
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding CurrentLayout, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource EnumToVis}, ConverterParameter={x:Static translator:PdfLayoutMode.PREVIEW}}"
                          Margin="0,10">
                        <StackPanel>
                            <Button Style="{StaticResource CommandButton}"
                                    Content="{x:Static commands:PdfCommands.ClearPdfCommand}"
                                    Margin="0,0,0,20" />
                            <Button Style="{StaticResource CommandButton}"
                                    Content="{x:Static commands:TranslationCommands.TranslateCommand}" />
                        </StackPanel>
                    </Grid>

                    <Grid Visibility="{Binding CurrentLayout, FallbackValue=Collapsed, Mode=OneWay, Converter={StaticResource EnumToVis}, ConverterParameter={x:Static translator:PdfLayoutMode.TRANSLATE}}"
                          Margin="0,10">
                        <StackPanel>
                            <CheckBox IsChecked="{Binding Path=ShowPdf}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      Foreground="{DynamicResource Brush.PrimaryFontColor}"
                                      Content="Show Pdf Preview"
                                      VerticalContentAlignment="Center"
                                      Margin="0,0,0,30" />
                            
                            <Button Style="{StaticResource CommandButton}"
                                    Content="{x:Static commands:TranslationCommands.ExportCommand}"
                                    Margin="0,0,0,20" />

                            <Button Style="{StaticResource CommandButton}"
                                    Content="{x:Static commands:TranslationCommands.ClearCommand}" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>

            <!--Pdf Preview-->
            <Border Grid.Column="1"
                    BorderThickness="2"
                    Margin="3"
                    Visibility="{Binding ShowPdf, Converter={StaticResource BoolToVis}}"
                    BorderBrush="{DynamicResource Brush.Accent}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Pdf Preview"
                               Style="{StaticResource HeaderStyle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    <Border BorderBrush="{DynamicResource Brush.Accent}"
                            BorderThickness="2"
                            Grid.Row="1">
                        <pdf:PdfRenderer x:Name="m_pdfViewer"
                                         Cursor="Arrow"
                                         AllowDrop="True"
                                         PreviewDragOver="pdfViewer_PreviewDragOver"
                                         PreviewDrop="pdfViewer_PreviewDrop"
                                         PreviewMouseWheel="pdfViewer_MouseWheel"
                                         Background="Black" />
                    </Border>
                    <TextBlock Text="{Binding PdfDataContainer.PdfPath, StringFormat={}File: {0}, TargetNullValue='No File Loaded'}"
                               HorizontalAlignment="Center"
                               Grid.Row="2" />
                </Grid>
            </Border>

            <!--Translation-->
            <Border Grid.Column="2"
                    BorderThickness="2"
                    Margin="3"
                    Visibility="{Binding Path=TranslationContainer, Converter={StaticResource InverseNullVis}, FallbackValue=Collapsed}"
                    BorderBrush="{DynamicResource Brush.Accent}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Translated Text"
                               Style="{StaticResource HeaderStyle}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                    <TextBox Text="{Binding Path=TranslationContainer.CurrentPage, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                             Style="{DynamicResource TextBoxStyle}"
                             ScrollViewer.CanContentScroll="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             IsReadOnly="true"
                             TextWrapping="WrapWithOverflow"
                             Grid.Row="1">
                        <TextBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Command="ApplicationCommands.Copy" />
                            </ContextMenu>
                        </TextBox.ContextMenu>
                    </TextBox>

                    <Grid Grid.Row="2"
                          Visibility="{Binding Path=TranslationContainer.CurrentPage.ShowImages,Converter={StaticResource BoolToVis}, FallbackValue=Collapsed}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Images:"
                                   FontSize="10" />
                        <ListView Grid.Row="1"
                                  BorderThickness="0"
                                  Background="White"
                                  BorderBrush="DimGray"
                                  HorizontalAlignment="Left"
                                  ItemsSource="{Binding Path=TranslationContainer.CurrentPage.Images}">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                Background="Transparent" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="auto" />
                                        </Grid.RowDefinitions>
                                        <Border BorderBrush="Black"
                                                x:Name="AttachmentBorder"
                                                Background="LightGray"
                                                BorderThickness="3">
                                            <Grid x:Name="AttachmentBackground"
                                                  Background="LightGray">
                                                <ContentControl Content="{Binding Thumbnail}"
                                                                Width="90"
                                                                Height="90">
                                                </ContentControl>
                                            </Grid>
                                        </Border>
                                        <Border Grid.Row="1"
                                                BorderBrush="Black"
                                                BorderThickness="1">
                                            <TextBlock Text="{Binding Index, StringFormat='Image #{0}'}"
                                                       HorizontalAlignment="Center" />
                                        </Border>
                                        <Grid.InputBindings>
                                            <MouseBinding Gesture="LeftDoubleClick"
                                                          Command="{Binding OpenCommand}" />
                                        </Grid.InputBindings>
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Open"
                                                          Command="{Binding OpenCommand}">
                                                </MenuItem>
                                                <MenuItem Header="Close"
                                                          Command="{Binding CloseCommand}">
                                                </MenuItem>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}"
                                                     Value="true">
                                            <Setter TargetName="AttachmentBorder"
                                                    Property="BorderBrush"
                                                    Value="Green" />
                                            <Setter TargetName="AttachmentBackground"
                                                    Property="Background"
                                                    Value="LightGreen" />
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
        <local:BusyIndicator x:Name="BusyIndicator"
                             Grid.RowSpan="3"
                             IsBusy="{Binding IsBusy, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType={x:Type local:PdfTranslatorControl}}}" />
    </Grid>

</local:BaseControl>
