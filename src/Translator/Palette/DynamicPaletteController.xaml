<controls:WindowExtension x:Class="Translator.Palette.DynamicPaletteController"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:controls="clr-namespace:VTEControls.WPF;assembly=VTEControls"
                          xmlns:local="clr-namespace:Translator.Palette"
                          xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
                          mc:Ignorable="d"
                          ResizeMode="NoResize"
                          WindowStartupLocation="CenterOwner"
                          Background="{DynamicResource Brush.Primary}"
                          Title="Palette"
                          Height="450"
                          Width="350">
    <Window.Resources>
        <CollectionViewSource x:Key="OrderedBrushes"
                              Source="{Binding Brushes}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription Direction="Ascending"
                                     PropertyName="BrushName" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Window.Resources>
    <Grid Background="{DynamicResource Brush.Primary}"
          Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Background="{DynamicResource Brush.Secondary}"
                BorderBrush="{DynamicResource Brush.Accent}"
                BorderThickness="2">
            <TextBlock Text="Dynamic Palette Swapper"
                       Margin="5"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Brush.PrimaryFontColor}"
                       VerticalAlignment="Center" />
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="5"
                    BorderBrush="{DynamicResource Brush.Accent}"
                    BorderThickness="2,0,2,0" />
            <Button Grid.Column="0"
                    Style="{StaticResource AutoSizedButton}"
                    Content="Import"
                    Command="{Binding ImportCommand}"
                    ToolTip="Imports a palette." />
            <Button Grid.Column="1"
                    Style="{StaticResource AutoSizedButton}"
                    Content="Export"
                    Command="{Binding ExportCommand}"
                    ToolTip="Exports a palette." />
            <Button Grid.Column="2"
                    Style="{StaticResource AutoSizedButton}"
                    Content="Reset"
                    Command="{Binding ResetCommand}"
                    ToolTip="Resets the current palette to last applied." />
            <Button Grid.Column="3"
                    Style="{StaticResource AutoSizedButton}"
                    Content="Cancel"
                    Command="{Binding CancelCommand}"
                    ToolTip="Closes the palette and sets last applied." />
            <Button Style="{StaticResource AutoSizedButton}"
                    Grid.Column="4"
                    Command="{Binding ApplyCommand}"
                    Content="Apply"
                    ToolTip="Closes and applies the palette." />
        </Grid>
        <ListView Grid.Row="3"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  HorizontalContentAlignment="Center"
                  VerticalContentAlignment="Center"
                  BorderThickness="2"
                  Background="{DynamicResource Brush.ListBackground}"
                  BorderBrush="{DynamicResource Brush.Accent}"
                  ItemsSource="{Binding Source={StaticResource OrderedBrushes}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Background"
                            Value="Transparent" />
                    <Setter Property="HorizontalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Center" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</controls:WindowExtension>
