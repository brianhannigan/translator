<Application x:Class="Translator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Translator"
             xmlns:converters="clr-namespace:Translator.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="Brush.ButtonBackground"
                             Color="#2e6eb3" />
            <SolidColorBrush x:Key="Brush.ButtonForeground"
                             Color="#FFFFFF" />
            <SolidColorBrush x:Key="Brush.Primary"
                             Color="#5c90ad" />
            <SolidColorBrush x:Key="Brush.PrimaryFontColor"
                             Color="#FFFFFF" />
            <SolidColorBrush x:Key="Brush.Accent"
                             Color="#FF28B2E6" />
            <SolidColorBrush x:Key="Brush.Secondary"
                             Color="#FF30809E" />
            <SolidColorBrush x:Key="ControlBackground"
                             Color="#dee1e3" />
            <SolidColorBrush x:Key="ControlForeground"
                             Color="#FF000000" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <system:String x:Key="AppDisplayName">Translator App</system:String>
                    <converters:CountToVisibilityConverter x:Key="CountToVis" />
                    <converters:CountPlusOneConverter x:Key="CountPlusOne" />
                    <converters:EnumToVisConverter x:Key="EnumToVis" />
                    <converters:BoolToVisibilityConverter x:Key="BoolToVis" />
                    <converters:InverseNullToVisibilityConverter x:Key="InverseNullVis" />
                    <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
                    <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis" />
                    <Style TargetType="Border"
                           x:Key="RoundedTabView">
                        <Setter Property="CornerRadius"
                                Value="15,15,0,0" />
                        <Setter Property="Background"
                                Value="{DynamicResource Brush.Primary}" />
                        <Setter Property="Margin"
                                Value="-6,-4,-6,-2" />
                        <Setter Property="BorderThickness"
                                Value="3,3,3,0" />
                        <Setter Property="BorderBrush"
                                Value="Transparent" />
                    </Style>
                    <Style TargetType="Button"
                           x:Key="AutoSizedButton">
                        <Setter Property="Margin"
                                Value="3" />
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalAlignment"
                                Value="Stretch" />
                        <Setter Property="Background"
                                Value="{DynamicResource Brush.ButtonBackground}" />
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource Brush.Accent}" />
                        <Setter Property="BorderThickness"
                                Value="1" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource Brush.ButtonForeground}" />
                        <Style.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius"
                                        Value="5" />
                                <Setter Property="Padding"
                                        Value="10,2,10,3" />
                            </Style>
                        </Style.Resources>
                    </Style>
                    <Style TargetType="RepeatButton"
                           x:Key="AutoSizedRepeatButton">
                        <Setter Property="Margin"
                                Value="3" />
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalAlignment"
                                Value="Stretch" />
                        <Setter Property="Background"
                                Value="{DynamicResource Brush.ButtonBackground}" />
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource Brush.Accent}" />
                        <Setter Property="BorderThickness"
                                Value="1" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource Brush.ButtonForeground}" />
                        <Style.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius"
                                        Value="5" />
                                <Setter Property="Padding"
                                        Value="10,2,10,3" />
                            </Style>
                        </Style.Resources>
                    </Style>
                    <Style TargetType="ComboBox"
                           x:Key="AutoSizedCombo">
                        <Setter Property="HorizontalAlignment"
                                Value="Stretch" />
                        <Setter Property="VerticalAlignment"
                                Value="Stretch" />
                        <Setter Property="BorderThickness"
                                Value="0" />
                    </Style>

                    <Style x:Key="HeaderStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="25" />
                        <Setter Property="FontWeight"
                                Value="SemiBold" />
                        <Setter Property="FontStyle"
                                Value="Italic" />
                        <Setter Property="Background"
                                Value="{DynamicResource Brush.Primary}" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource Brush.PrimaryFontColor}" />
                    </Style>

                    <Style x:Key="TextBlockStyle2"
                           TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="Background"
                                Value="{DynamicResource Brush.Primary}" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource Brush.PrimaryFontColor}" />
                    </Style>
                    
                    <Style x:Key="TextBlockStyle"
                           TargetType="TextBlock">
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="Background"
                                Value="{DynamicResource ControlBackground}" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource ControlForeground}" />
                    </Style>
                    <Style x:Key="TextBoxStyle"
                           TargetType="TextBox">
                        <Setter Property="FontSize"
                                Value="15" />
                        <Setter Property="Background"
                                Value="{DynamicResource ControlBackground}" />
                        <Setter Property="Foreground"
                                Value="{DynamicResource ControlForeground}" />
                        <Setter Property="BorderBrush"
                                Value="{DynamicResource Brush.Accent}" />
                        <Setter Property="BorderThickness"
                                Value="2" />
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
